<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alan.btapp.LightFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light 1"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="56dp"
            android:id="@+id/textView3" />

        <CheckBox
            android:text="turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:textSize="15dp"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light 4"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/checkBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light 5"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light 2"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/textView3" />

        <CheckBox
            android:text="turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:id="@+id/checkBox4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light 3"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/textView6"
            android:layout_marginEnd="20dp"
            android:layout_above="@+id/checkBox3"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:text="turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:layout_below="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <CheckBox
            android:text="turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:layout_alignBaseline="@+id/checkBox2"
            android:layout_alignBottom="@+id/checkBox2"
            android:layout_alignStart="@+id/textView6" />

        <CheckBox
            android:text="turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

    </RelativeLayout>

</FrameLayout>
